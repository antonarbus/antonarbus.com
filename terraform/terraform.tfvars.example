# ==============================================================================
# TERRAFORM VARIABLES - EXAMPLE FILE
# ==============================================================================
# This file shows all available configuration variables
# Copy this file to create your own configuration:
#
#   cp terraform.tfvars.example terraform.tfvars
#
# Then edit terraform.tfvars with your values
#
# IMPORTANT:
# - terraform.tfvars is in .gitignore (never commit it!)
# - It may contain sensitive data (secrets, API keys, etc.)
# - Each team member / environment should have their own terraform.tfvars
#
# All variables have defaults in variables.tf, so terraform.tfvars is optional
# Only override values you need to change

# ==============================================================================
# PROJECT & REGION - REQUIRED
# ==============================================================================

# Your Google Cloud Project ID
# Find it at: https://console.cloud.google.com/ (top dropdown)
project_id = "antonarbus"

# Google Cloud region for all resources
# Options: us-central1, us-east1, europe-west1, asia-northeast1, etc.
# See: https://cloud.google.com/about/locations
region = "us-central1"

# ==============================================================================
# ARTIFACT REGISTRY
# ==============================================================================

# Name of the Docker image repository
# Must be lowercase, hyphens allowed, no underscores
artifact_registry_name = "artifact-registry"

# ==============================================================================
# CLOUD RUN
# ==============================================================================

# Name of the Cloud Run service
cloud_run_service_name = "cloud-run"

# Name of the Docker image in Artifact Registry
docker_image_name = "docker-image"

# ==============================================================================
# SERVICE ACCOUNTS
# ==============================================================================

# Service account used by GitHub Actions for CI/CD
github_actions_sa_name = "github-actions-sa"

# Service account used by the running Cloud Run app
cloud_run_sa_name = "cloud-run-sa"

# ==============================================================================
# SCALING & PERFORMANCE
# ==============================================================================

# Minimum instances to keep running (0 = scale to zero, saves money)
# Set to 1+ for production to avoid cold starts
min_instances = 0

# Maximum instances allowed (prevents runaway costs)
max_instances = 100

# CPU limit per container
# Options: "1", "2", "4", "8"
cpu_limit = "1"

# Memory limit per container
# Options: "128Mi", "256Mi", "512Mi", "1Gi", "2Gi", "4Gi", "8Gi", "16Gi", "32Gi"
memory_limit = "512Mi"

# Port your app listens on (must match your Dockerfile EXPOSE)
container_port = 8080

# ==============================================================================
# CUSTOM DOMAIN
# ==============================================================================

# Your custom domain (without www or https://)
# After applying, configure DNS records at your domain registrar
custom_domain = "antonarbus.com"

# ==============================================================================
# ADVANCED: OVERRIDE EXAMPLES
# ==============================================================================
# Uncomment and modify as needed for different environments

# Example: Use different project for staging
# project_id = "antonarbus-staging"

# Example: Deploy to different region
# region = "europe-west1"

# Example: Production settings - keep instances warm
# min_instances = 2
# max_instances = 50

# Example: High-performance configuration
# cpu_limit = "2"
# memory_limit = "2Gi"

# Example: Development environment
# cloud_run_service_name = "cloud-run-dev"
# custom_domain = "dev.antonarbus.com"
